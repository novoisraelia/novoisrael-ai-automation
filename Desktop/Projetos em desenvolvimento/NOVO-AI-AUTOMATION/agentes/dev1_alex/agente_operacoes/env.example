# Agente de Operações - Configurações de Ambiente

# ===========================================
# CONFIGURAÇÕES GERAIS
# ===========================================
DEBUG=True
LOG_LEVEL=INFO
ENVIRONMENT=development

# ===========================================
# BANCO DE DADOS
# ===========================================
DATABASE_URL=postgresql://user:password@localhost:5432/agente_operacoes
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ===========================================
# REDIS (Cache e Filas)
# ===========================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# CELERY (Processamento Assíncrono)
# ===========================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ===========================================
# APIs EXTERNAS - ERP
# ===========================================
ERP_API_URL=https://api.erp.com/v1
ERP_API_KEY=your_erp_api_key
ERP_API_SECRET=your_erp_api_secret
ERP_TIMEOUT=30

# ===========================================
# APIs EXTERNAS - LOGÍSTICA
# ===========================================
LOGISTICA_API_URL=https://api.logistica.com/v1
LOGISTICA_API_KEY=your_logistica_api_key
LOGISTICA_API_SECRET=your_logistica_api_secret
LOGISTICA_TIMEOUT=30

# ===========================================
# APIs EXTERNAS - TRANSPORTADORAS
# ===========================================
CORREIOS_API_URL=https://api.correios.com.br/v1
CORREIOS_API_KEY=your_correios_api_key
MERCADO_ENVIOS_API_URL=https://api.mercadolibre.com/shipments
MERCADO_ENVIOS_ACCESS_TOKEN=your_mercadolibre_token

# ===========================================
# APIs FISCAIS - SEFAZ
# ===========================================
SEFAZ_API_URL=https://api.sefaz.com.br/v1
SEFAZ_API_KEY=your_sefaz_api_key
SEFAZ_CERTIFICADO_PATH=/path/to/certificate.p12
SEFAZ_CERTIFICADO_PASSWORD=your_certificate_password

# ===========================================
# CONFIGURAÇÕES DE NFE
# ===========================================
NFE_AMBIENTE=homologacao  # homologacao ou producao
NFE_SERIE=1
NFE_NUMERO_INICIAL=1
NFE_EMPRESA_CNPJ=12345678000199
NFE_EMPRESA_RAZAO_SOCIAL=Empresa Exemplo LTDA

# ===========================================
# CONFIGURAÇÕES DE ESTOQUE
# ===========================================
ESTOQUE_MINIMO_PERCENTUAL=10
ESTOQUE_ALERTA_PERCENTUAL=20
ESTOQUE_REPOSICAO_AUTOMATICA=False

# ===========================================
# CONFIGURAÇÕES DE FRETE
# ===========================================
FRETE_CALCULO_AUTOMATICO=True
FRETE_OTIMIZACAO=True
FRETE_PRAZO_MAXIMO=7

# ===========================================
# CONFIGURAÇÕES DE NOTIFICAÇÕES
# ===========================================
NOTIFICACAO_EMAIL_SMTP=smtp.gmail.com
NOTIFICACAO_EMAIL_PORT=587
NOTIFICACAO_EMAIL_USER=your_email@gmail.com
NOTIFICACAO_EMAIL_PASSWORD=your_email_password
NOTIFICACAO_EMAIL_FROM=Agente Operações <noreply@empresa.com>

NOTIFICACAO_WHATSAPP_API_URL=https://api.whatsapp.com/v1
NOTIFICACAO_WHATSAPP_TOKEN=your_whatsapp_token

# ===========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ===========================================
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ===========================================
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
PROMETHEUS_PORT=8001
HEALTH_CHECK_INTERVAL=30

# ===========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ===========================================
RELOAD=True
WORKERS=1
HOST=0.0.0.0
PORT=8000
