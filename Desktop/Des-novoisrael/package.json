{
  "name": "mega-vendedor-ai",
  "version": "1.0.0",
  "description": "Sistema WhatsApp IA para Novo Israel",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "cross-env TS_NODE_TRANSPILE_ONLY=1 TS_NODE_IGNORE_DIAGNOSTICS=6133 npx ts-node ./src/main.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "node -e \"console.log('Sistema funcionando!')\"",
    "test:full": "tsx test-mega-vendedor.ts",
    "test:scenarios": "tsx test-mega-vendedor.ts --scenarios",
    "test:components": "tsx test-mega-vendedor.ts --components",
    "test:simple": "node test-simple.js",
    "test:automated": "node test-automated.js",
    "test:api": "node test-api.js",
    "test:message": "node test-message-processing.js",
    "test:profiles": "node test-profile-detection.js",
    "test:complete": "tsx test-mega-vendedor-completo.ts",
    "clean": "rm -rf dist data/sessions/*"
  },
  "dependencies": {
    "@whiskeysockets/baileys": "^6.5.0",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "file-type": "^18.5.0",
    "helmet": "^7.0.0",
    "node-cache": "^5.1.2",
    "openai": "^4.20.0",
    "pino": "^8.15.0",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.18",
    "@types/node": "^20.8.0",
    "@types/qrcode-terminal": "^0.12.0",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.1",
    "pino-pretty": "^13.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.0.0",
    "typescript": "^5.2.2"
  }
}
